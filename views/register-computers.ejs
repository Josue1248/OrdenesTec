<%- include('includes/header') %>

<div class="container reg-page">
    <% if (locals.errors) { %>
        <% errors.forEach(function(error){ %>
            <div class="alert alert-danger"><%= error.msg %></div>
        <% }) %>
    <% } %>
    <%- messages() %>
      <form method="post" action="/computers/register" class="form-signin">
        <h2 class="form-signin-heading text-center">Registro de computadora</h2>
        <label class="sr-only">Departamento</label>
        <input type="text" name="department" class="form-control" placeholder="Departamento" value="<%= (!!locals.name)?name:'' %>" required autofocus>
        <br>
        <label class="sr-only">Marca</label>
        <input type="text" name="brand" class="form-control" placeholder="Marca" value="<%= (!!locals.email)?email:'' %>" required autofocus>
        <br>
        <label class="sr-only">Modelo</label>
        <input type="text" name="model" class="form-control" placeholder="Modelo" value="<%= (!!locals.username)?username:'' %>" required autofocus>
        <br>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Registrar</button>
      </form>
    </div> <!-- /container -->

<%- include('includes/footer') %>